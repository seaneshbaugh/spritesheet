<% if @error.present? %>
  <div class="error">
    <%= @error %>
  </div>
<% end %>
<form action="/" method="POST" enctype="multipart/form-data" id="file-upload-form">
  <input type="file" name="file" id="file-upload-form-file">
  <input type="submit" name="submit" value="Upload" id="file-upload-form-submit">
</form>
